<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[29vw]  bg-white px-20 py-10 rounded-[30px] ">
      <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter leading-none capitalize">Create a new account</h1>
      <form action="/register" method="post">
        <input class="block border-2 mt-6 rounded-md w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="block border-2 mt-2 rounded-md w-full px-3 py-2" type="email" name="email" placeholder="email">
        <input class="block border-2 mt-2 rounded-md w-full px-3 py-2" type="number" name="contact" placeholder="contact">
        <input class="block border-2 mt-2 rounded-md w-full px-3 py-2" type="password" name="password" placeholder="password">
        <input class="block border-2 mt-2 w-full px-3 py-2 bg-red-600 test-white rounded-full" type="submit" value="Register">
        <p class="text-xs font-semibold text-zinc-700 mt-7  mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy</p>
      </form>
      <a class="inline-block w-full text-sm mt-3 font-semibold text-zinc-700 text-center" href="/">Log in into existing account</a>
    </div>
</div>
<% include ./partials/footer.ejs %>